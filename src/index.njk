{% extends "src/base.njk"%}

{% block head %}
  <title>Tramites Departamentales | Red Ciudadana</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
{% endblock %}

{% block content%}
        <section class="home-slider position-relative mb-30  px-4">
            <div class="container">
                <div class="home-slide-cover mt-30">
                    <div class="hero-slider-1 style-4 dot-style-1 dot-style-1-position-1">
                        <div class="single-hero-slider single-animation-wrap" style="background-image: url(/assets/imgs/red/elementos/slider/SLIDER-31.png)">
                            <div class="slider-content">
                                <h1 class="display-3 mb-40">
                                    ¡Bienvenido a <br>Trámites.gt!
                                </h1>
                                <p class="mb-65">
                                    Simplificando tus gestiones públicas,<br> ahorrando tiempo y costos.
                                </p>
                            </div>
                        </div>
                        <div class="single-hero-slider single-animation-wrap" style="background-image: url(/assets/imgs/red/elementos/slider/SLIDER-31.png)">
                            <div class="slider-content">
                                <h1 class="display-3 mb-40">
                                    Trámites electrónicos<br> al alcance de tu mano
                                </h1>
                                <p class="mb-65">
                                    Realiza tus trámites desde casa,<br> sin filas ni complicaciones.
                                </p>
                            </div>
                        </div>
                        <div class="single-hero-slider single-animation-wrap" style="background-image: url(/assets/imgs/red/elementos/slider/SLIDER-31.png)">
                            <div class="slider-content">
                                <h1 class="display-3 mb-40">
                                    Gestión pública<br> eficiente y accesible
                                </h1>
                                <p class="mb-65">
                                    Descubre cómo Trámites.gt te facilita <br> el acceso a servicios públicos.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="slider-arrow hero-slider-1-arrow"></div>
                </div>
            </div>
        </section>
        <!--End category slider-->

        <!--Infraestructura y bienvenida-->
        <section class="banners mb-25  px-4">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-6">
                        <div class="new_banners h-100">
                            <img src="/assets/imgs/red/elementos/iconos/ICONO-08.png">
                            <h4>
                                Trámites personales
                            </h4>
                            <p style="margin-bottom: 20px!important;" class="text-center">
                                Accede a toda la información necesaria para realizar tus trámites personales de manera rápida y eficiente
                            </p>
                            <a href="#" class="btn btn-xs">Ver más<i class="fi-rs-arrow-small-right"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6">
                        <div class="new_banners h-100">
                            <img src="/assets/imgs/red/elementos/iconos/ICONO-09.png">
                            <h4>
                                Busco Empleo
                            </h4>
                            <p style="margin-bottom: 20px!important;" class="text-center">
                                Facilitamos tu camino hacia nuevas oportunidades laborales con información detallada sobre los trámites necesarios para buscar y obtener empleo.
                            </p>
                            <a href="#" class="btn btn-xs">Ver más<i class="fi-rs-arrow-small-right"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-4 d-md-none d-lg-flex">
                        <div class="new_banners h-100">
                            <img src="/assets/imgs/red/elementos/iconos/ICONO-10.png">
                            <h4>Empresas</h4>
                            <p style="margin-bottom: 20px!important;" class="text-center">
                                Ayudamos a emprendedores y empresarios a manejar los trámites necesarios para operar y crecer sus negocios en Guatemala.
                            </p>
                            <a href="#" class="btn btn-xs">Ver más<i class="fi-rs-arrow-small-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--End banners-->

        <!--Categorias-->
        <section class="featured section-padding  px-4">
            <div class="container">
                <div class="row mb-40 mt-40">
                    <div class="d-flex">
                        <h4>¿Qué municipalidad deseas ver?</h4>
                        <a class="btn btn-xs ml-40"  href="/instituciones/index.html">Ver Más<i class="fi-rs-arrow-small-right"></i><a/>
                    </div>
                </div>
                <div class="row mb-20 mt-40">
                    
                    {% for item in collections.ministerios | limit(15) %}
                    <div class="col-lg-1-5 col-md-4 col-12 col-sm-6 mb-md-4 mb-xl-0 mb-40">
                        <a href="{{item.url}}"><div class="h-100 banner-left-icon d-flex align-items-center wow animate__animated animate__fadeInUp" data-wow-delay="0">
                            <div class="banner-icon">
                                <img src="/assets/imgs/red/elementos/iconos/ICONO-20.png" alt="" />
                            </div>
                            <div class="banner-text">
                                <h3 class="icon-box-title">{{item.data.instituciones.name}}</h3>
                            </div>
                        </div></a>
                    </div>
                    {% endfor %}
                    
                </div>
                
            </div>
        </section>
        <!--CATEGORIAS ESPECIFICAS-->
        <section class="featured section-padding">
            <div class="container">
                <div class="row mb-40 mt-40">
                    <div class="d-flex">
                        <h4>¿Qué información necesitas?</h4>
                        <a class="btn btn-xs ml-40"  href="/instituciones/index.html">Ver Más<i class="fi-rs-arrow-small-right"></i><a/>
                    </div>
                </div>
                <div class="row mb-20 mt-40 justify-content-center">
                    {% for item in collections.categoriaesp2 | limit(10) %}
                    <div class="col-lg-1-5 col-md-4 col-12 col-sm-6 mb-md-4 mb-xl-0 mb-40">
                        <a href="{{item.url}}"><div class="h-100 banner-left-icon d-flex align-items-center wow animate__animated animate__fadeInUp" data-wow-delay="0">
                            <div class="banner-icon">

                                <img  src="/assets/imgs/red/elementos/iconos/ICONO-08.png" alt="" />

                                    
                            </div>
                            <div class="banner-text">
                                <h3 class="icon-box-title">{{item.data.categoriaesp2.name}}</h3>
                            </div>
                        </div></a>
                    </div>
                    {% endfor %}
                    <div class="col-lg-12 justify-content-center d-flex">
                        <a class="btn "  href="/categoriasesps/index.html">Ver Más</a>
                    </div>
                    
                </div>
            </div>
        </section>
{% endblock %}